/**bank-card-detail.wxss**/
@import '../../../styles/common.wxss';

.wrapper {
  font-family: "Microsoft YaHei";
}

.wrapper .card-container {
  height: auto;
  margin-top: 90rpx;
}

.card-container .title {
  color: #5c5c5c;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.card-container .title image {
  width: 146rpx;
  height: 10rpx;
  position: relative;
  top: -4rpx;
}

.card-container .title text {
  margin: 0 40rpx;
}

.card-container .content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-container .card {
  width: calc(100% - 50rpx);
}

.card .card-face {
  height: 320rpx;
  border-radius: 30rpx;
  padding: 40rpx 40rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #fff;
  font-size: 30rpx;
  box-shadow: 2rpx 4rpx 16rpx #686868;
  letter-spacing: 4rpx;
  align-items: unset;
  box-sizing: content-box;
}

.card-face .item {
  margin-bottom: 20rpx;
}

.card-face .item .label {
  font-weight: bold;
}

.card-face .item .content {
  display: inline-block;
}

.card-face .password .btn-container {
  display: inline-block;
  position: absolute;
  right: 80rpx;
}

.card-container .content.action {
 background: rgb(246, 246, 246);
 margin-top: 130rpx;
 height: 328rpx;
 padding-top: 150rpx;
}

.content.action .btn-group {
  width: calc(100% - 150rpx);
}

.action .btn-group .item {
  width: 33.333%;
  padding: 20rpx 0;
  text-align: center;
}

.action .item .img {
  width: 100rpx;
  height: 100rpx;
  margin: auto;
  margin-bottom: 10rpx; 
}

.action .img image {
  width: 100%;
  height: 100%;
}

.action .item .text {
  font-size: 28rpx;
}

/* ******************************* */

.text-white {
  color: #fff !important;
}

.d-block {
  display: block !important;
}

.d-inline-block {
  display: inline-block !important;
}

.w-100 {
  width: 100%;
}

/* ****************************** */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 560rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -270rpx 100rpx;
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-content {
  padding: 50rpx 32rpx;
}
.modal-input {
  position: relative;
  background: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
  margin-bottom: 60rpx;
}
.modal-input:last-child {
  margin-bottom: 20rpx;
}
.input {
  width: 100%;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  box-sizing: border-box;
  color: #333;
}
.modal-input .error {
  color: #dc3545;
  position: absolute;
  margin-top: 4rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #28a745;
  text-align: center;
}